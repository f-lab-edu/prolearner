<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.ejjang2030.bookcontentparser.api.naver.BookCatalog"/>
        <import type="com.litholr.prolearner.utils.ChipInfo"/>
        <variable
            name="catalog"
            type="BookCatalog" />
        <variable
            name="chipInfo"
            type="ChipInfo" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:verticalScrollbarPosition="right"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/image_background">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="140dp"
                        android:layout_height="195dp"
                        android:layout_marginVertical="50dp"
                        android:id="@+id/book_image"
                        app:imageUrl="@{catalog.thumbnailUrl}"
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:backgroundTint="#00000000"
                        android:elevation="20dp"
                        android:contentDescription="@string/bookimage" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    tools:text="자바의 신 vol.1 기초"
                    android:text="@{catalog.title}"
                    android:textColor="#26282D"
                    android:paddingHorizontal="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:id="@+id/book_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="20dp"
                    tools:text="자바의 신 vol.1 기초"
                    android:textColor="#26282D"
                    android:visibility="@{catalog.subtitle == null? View.GONE : View.VISIBLE}"
                    android:text="@{catalog.subtitle}"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:id="@+id/book_subtitle"/>
                <LinearLayout
                    android:weightSum="3"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/layout_info_chip"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="6dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:id="@+id/info_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        bind:keyOfLayoutInfoChip="@{chipInfo.author.first}"
                        bind:valueOfLayoutInfoChip="@{chipInfo.author.second}"/>
                    <include layout="@layout/layout_info_chip"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="6dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:id="@+id/info_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        bind:keyOfLayoutInfoChip="@{chipInfo.publisher.first}"
                        bind:valueOfLayoutInfoChip="@{chipInfo.publisher.second}"/>
                    <include layout="@layout/layout_info_chip"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="6dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:id="@+id/info_resource_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        bind:keyOfLayoutInfoChip="@{chipInfo.infoResourceFrom.first}"
                        bind:valueOfLayoutInfoChip="@{chipInfo.infoResourceFrom.second}"/>
                </LinearLayout>
                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:elevation="5dp"
                    android:text="@{catalog.description}"
                    android:id="@+id/expand_text_view"
                    android:background="@drawable/bg_book_description"
                    app:maxCollapsedLines="4"
                    app:animDuration="200">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:textSize="13sp"
                        android:text="@{catalog.description}"
                        android:textColor="#D8000000"
                        tools:text="대통령이 임시회의 집회를 요구할 때에는 기간과 집회요구의 이유를 명시하여야 한다. 대통령의 임기는 5년으로 하며, 중임할 수 없다. 국가는 재해를 예방하고 그 위험으..."
                        android:textAlignment="gravity"
                        android:paddingHorizontal="18dp"
                        android:layout_marginVertical="5dp"
                        android:id="@+id/expandable_text"/>
                    <ImageButton
                        android:id="@+id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="end|bottom"
                        android:background="#00000000" />
                </com.ms.square.android.expandabletextview.ExpandableTextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/date_picker"
                    android:layout_margin="20dp"
                    android:weightSum="2">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/start_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/start_date"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                        <TextView
                            android:id="@+id/start_date_pick"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            tools:text="2022.12.31"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:background="@drawable/bg_date_picker"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/start_date_text"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/end_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/end_date"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                        <TextView
                            android:id="@+id/end_date_pick"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            tools:text="2023.03.31"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:background="@drawable/bg_date_picker"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/end_date_text"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white"
                    android:elevation="3dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/book_contents">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>
